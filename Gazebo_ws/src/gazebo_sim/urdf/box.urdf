<?xml version="1.0"?>

<!-- filepath: urdf/box_robot.urdf -->
<robot name="box_robot">

  <!-- 主体盒子连杆 -->
  <link name="base_link">
    <!-- 惯性属性 -->
    <inertial>
      <mass value="1000"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="166.6666" ixy="0.0" ixz="0.0"
               iyy="166.6666" iyz="0.0"
               izz="166.6666"/>
    </inertial>

    <!-- 固定关节 -->
    <joint name="inertial_joint" type="fixed">
      <parent link="base_link"/>
      <child link="main_mass"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- 视觉外观 -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    
    <!-- 碰撞检测 -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
    </collision>
  </link>

  <!-- Gazebo材质和物理属性 -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

</robot>