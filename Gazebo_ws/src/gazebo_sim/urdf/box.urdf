<?xml version="1.0"?>
<!-- filepath: urdf/box_robot.urdf -->
<robot name="box_robot">

  <!-- 主体盒子连杆 -->
  <link name="base_link">
    <!-- 惯性属性 -->
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.083" ixy="0.0" ixz="0.0"
               iyy="0.083" iyz="0.0"
               izz="0.083"/>
    </inertial>
    
    <!-- 视觉外观 -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    
    <!-- 碰撞检测 -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Gazebo材质和物理属性 -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

</robot>